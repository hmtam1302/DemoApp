<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        >
        <!--Back_button-->
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back"
            android:contentDescription="@string/back"
            android:onClick="payment"
            />
        <!--Display_text-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="7dp"
            android:text="PAYMENT"
            android:textColor="#06208B"
            android:textSize="25dp"
            android:textStyle="bold" />
        <!--Display_text-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="Choose a payment method"
            android:textColor="#707070"
            android:textSize="20dp"
            android:textStyle="normal" />
        <!--Confirm_button-->
        <ImageButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/confirm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="640dp"
            />
        <!--Choose_cash_button-->
        <ImageButton
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:background="@drawable/cash_payment"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            />
        <!--Choose_momo_button-->
        <ImageButton
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:background="@drawable/momo_icon"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="141dp"
            />
        <!--Choose_internet_banking_button-->
        <ImageButton
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:background="@drawable/mobile_internet_banking"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="182dp"
            />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>