<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--Back button-->
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/backbtn"
            android:contentDescription="@string/back"
            android:onClick="backToPrevious" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="@string/name"
            android:textColor="#040087"
            android:textSize="30dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="Search"
                android:textColor="#040087"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/billKey"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"
                android:background="@drawable/edittextborder"
                android:hint="Enter Bill ID"
                android:maxLength="8"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="10dp" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="350dp"
                android:adjustViewBounds="true"
                android:background="@drawable/searchbtn"
                android:onClick="searchBill"
                android:scaleType="fitCenter" />
        </RelativeLayout>

        <!--List of restaurant-->
        <ListView
            android:id="@+id/bill_cook_List"
            android:layout_width="400dp"
            android:layout_height="535dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="#FFFFFF"/>

        <!--Navigation bar-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TableRow>

                <ImageButton
                    android:id="@+id/list_button"
                    android:layout_width="105dp"
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:onClick="displayBillCook"
                    android:scaleType="fitCenter"
                    android:src="@drawable/preparing_pressed" />

                <ImageButton
                    android:id="@+id/completed_button"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:onClick="displayCompletedBill"
                    android:scaleType="fitCenter"
                    android:src="@drawable/complete" />

                <ImageButton
                    android:id="@+id/setting_button"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:onClick="displayInfo"
                    android:scaleType="fitCenter"
                    android:src="@drawable/settings" />

                <ImageButton
                    android:layout_width="105dp"
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:onClick="displayInfo"
                    android:scaleType="fitCenter"
                    android:src="@drawable/accountbtn" />
            </TableRow>
        </TableLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>