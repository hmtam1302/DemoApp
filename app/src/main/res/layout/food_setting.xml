<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--Back button-->
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/backbtn"
            android:contentDescription="@string/back"
            android:onClick="backToPrevious" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="Food settings"
            android:textColor="#040087"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/foodsettings_foodLogo"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="60dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp">
            <EditText
                android:id="@+id/edt_foodsettings_name"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edittextborder"
                android:hint="Enter food name"
                android:maxLines="1"
                android:paddingStart="30dp"
                android:paddingLeft="50dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#000" />
            <EditText
                android:id="@+id/edt_foodsettings_quantity"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edittextborder"
                android:hint="Enter remain quantity"
                android:maxLines="1"
                android:paddingStart="30dp"
                android:paddingLeft="50dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#000"
                android:layout_marginTop="60dp"/>
            <EditText
                android:id="@+id/edt_foodsettings_price"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edittextborder"
                android:hint="Enter food price"
                android:maxLines="1"
                android:paddingStart="30dp"
                android:paddingLeft="50dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#000"
                android:layout_marginTop="120dp"/>
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="180dp">

                <RadioButton
                    android:id="@+id/radioEnable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable"
                    android:buttonTint="#040087"
                    android:textColor="#040087"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radioDisable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#040087"
                    android:text="Disable"
                    android:textSize="20sp"
                    android:textColor="#040087"/>
            </RadioGroup>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do you want to change this food?"
                    android:textStyle="italic"
                    android:layout_centerHorizontal="true"/>

                <ImageButton
                    android:id="@+id/foodsettings_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/no"
                    android:layout_marginLeft="30dp"
                    android:onClick="discardChange"
                    />

                <ImageButton
                    android:id="@+id/foodsettings_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/yes"
                    android:layout_marginLeft="200dp"
                    android:onClick="confirmChange"/>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>