<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        >
        <!--Back_button-->
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back"
            android:contentDescription="@string/back"
            android:onClick="backToPrevious"
            />
        <!--Display_text-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="7dp"
            android:text="YOUR BILL"
            android:textColor="#06208B"
            android:textSize="25dp"
            android:textStyle="bold" />
        <!--Display_text-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:text="LIST OF DISHES"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />
        <!--Display_text-->

        <!--List of dishes-->
        <ListView
            android:id="@+id/bill_list"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF">
        </ListView>
        <!--Display_text-->
        <!--Display_text-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="580dp"
            android:text="Are you done? Please select 'Confirm'"
            android:textColor="#707070"
            android:textSize="15dp"
            android:textStyle="italic" />
        <!--Choose_cash_button-->
        <!--Display_text-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="540dp"
            android:text="Total"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
        <!--Display_text-->
        <TextView
            android:id="@+id/bill_totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="540dp"
            android:text="Price VND"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="italic" />
        <!--Order_button-->
        <ImageButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/confirm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="610dp"
            android:onClick="backToHome"
            />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>